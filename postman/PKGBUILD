pkgname=postman
pkgver=11.0.4
pkgrel=1
arch=(x86_64)
source=(postman-$pkgver-linux-x64.tar.gz::https://dl.pstmn.io/download/version/$pkgver/linux64 postman.desktop)
md5sums=(SKIP SKIP)

package() {
  install -d $pkgdir/{opt,usr/bin}

  cp -r Postman/app $pkgdir/opt/postman

  install -D $pkgdir/opt/postman/resources/app/assets/icon.png \
             $pkgdir/usr/share/icons/hicolor/128x128/apps/postman.png

  ln -s /opt/postman/Postman $pkgdir/usr/bin/postman

  install -D postman.desktop $pkgdir/usr/share/applications/postman.desktop
}
